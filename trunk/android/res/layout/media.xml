    <Button
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Beep PC speaker"
    android:id="@+id/beep_pc_speaker"/>
 
    <Button
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Launch VLC"
    android:id="@+id/vlc_launch"/>
    
    
    
<Button
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Toggle Pause"
    android:id="@+id/vlc_telnet_button_pause"/>
    

<Button
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Toggle Fullscreen"
    android:id="@+id/vlc_telnet_button_fullscreen"/>

</LinearLayout>
